@model TbReserve
<!DOCTYPE html>
<html lang="en">

<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>Reservation Success</h1>
            </div>
        </div>
    </div>
</div>

<body>



    <!-- thank-you section start -->
    <section class="section-b-space light-layout">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="success-text">
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                        <h2>thank you @ViewBag.name</h2>
                        <p>Reservation is successfully processsed and we are waiting you at : @ViewBag.date </p>
                        <p>with your @ViewBag.numperson Friends</p>
                        <p> your PhoneNumber: @ViewBag.phone </p>
                        <p> your email: @ViewBag.email </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section ends -->
   
</body>

</html>