@model TbSlider
<div class="page-body">



    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <div class="card card-info">
                    <div class="card-header">
                        <div class="btn btn-primary">Add Slider</div>
                    </div>
                    <form asp-controller="Home" asp-action="SaveSlider" method="post"
                          role="form" class="form-horizontal" enctype="multipart/form-data">
                        <div class="card-body">

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Slider Title </label>
                                <div class="col-sm-4">
                                    <input type="text" asp-for="SliderTitle" class="form-control" placeholder="Title ">

                                </div>
                            </div>

                            <div class="form-group row">
                                <input type="hidden" asp-for="TbSliderId" />
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Slider Image</label>
                                <div class="col-sm-4">
                                    <input type="file" name="Files" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label for="review">Slider Decription </label>
                                <textarea class="form-control" placeholder="Write Slider Decription"
                                          asp-for="SliderDescription" rows="6"></textarea>
                            </div>


                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Submit</button>

                        </div>
                    </form>

                </div>



            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->




</div>

